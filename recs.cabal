        base ^>=4.15.0.0
      , vector
      , exceptions
      , containers
      , lens
      , generic-lens
      , vector-th-unbox
      , unordered-containers
      , compact
      , mtl
      , witch
      , data-vector-growable
      , primitive
      , data-default
      , tardis
    hs-source-dirs:   src
